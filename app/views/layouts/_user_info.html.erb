<h2>
  User info
</h2>

<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>

<table>
  <tr>
    <th>
      name
    </th>
    <td>
      <%= user.name %>
    </td>
  </tr>
  <tr>
    <th>
      introduction
    </th>
    <td>
      <%= user.introduction %>
    </td>
  </tr>
</table>
<% if user.id == current_user.id %>
  <%= link_to "Edit", edit_user_path(user.id) %>
<% else %>
  <%= link_to "Edit", user_path(current_user.id) %>
<% end %>
