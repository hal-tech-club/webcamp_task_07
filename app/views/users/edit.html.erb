<% if @user.errors.any? %>
  <div class="row">
    <%= @user.errors.count %>errors prohibited this obj from being saved:<br>
    <% @user.errors.full_messages.each do |message| %>
        <%= message %>
    <% end %>
  </div>
<% end %>

<h1>User info</h1>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :profile_image , "Image" %>
    <%= f.attachment_field :profile_image %>
  </div>


  <div>
    <%= f.label :introduction, "Introduction" %>
    <%= f.text_area :introduction %>
  </div>


  <%= f.submit "Update User" %>
<% end %>

