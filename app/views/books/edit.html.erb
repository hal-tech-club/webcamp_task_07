<h1>
  Editing Book
</h1>

<%= form_for @book do |f| %>
  <div>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body, "Opinion" %>
    <%= f.text_area :body %>
  </div>

  <%= f.submit "Update Book" %>
<% end %>

<div>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>
</div>
