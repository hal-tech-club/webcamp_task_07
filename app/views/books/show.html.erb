<%= render 'layouts/user_info', user: @user %>
<%= render 'layouts/new_book', book: @new_book %>

<h2>
  Book detail
</h2>

<table>
  <tbody>
    <tr>
      <td>
          <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>
            <br>
            <%= @user.name %>
          <% end %>
      </td>
      <td>
        <%= link_to @book.title, book_path(@book.id) %>
      </td>
      <td>
        <%= @book.body %>
      </td>
      <% if @book.user.id == current_user.id %>
        <td>
          <%= link_to "Edit", edit_book_path(@book.id) %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>
