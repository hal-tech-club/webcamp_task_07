<%= render 'layouts/user_info', user: @user %>
<%= render 'layouts/new_book', book: @new_book %>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>
        image
      </th>
      <th>
        name
      </th>
      <th>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td>
        <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>
      </td>
      <td>
        <%= user.name %>
      </td>
      <td>
        <%= link_to "Show", user_path(user.id) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
